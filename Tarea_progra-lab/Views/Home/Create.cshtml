@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PrograLabPC1.Models.Student;


<!DOCTYPE html>
<html>
    <title>Student app</title>
<body>
    <h1>Student app</h1><br>
   
    <div>
        <form asp-controller="Home" asp-action="Registro">
            <label>Cliente: </label><input asp-for="Name"/><br/>

            <label>Birth: </label><input asp-for="Date"/><br/>

            <label>Hobbie:  </label>
            <select asp-for="Hobbie">
                <option value="Nadar">Nadar</option>
                <option value="Bicicleta">Bicicleta</option>
                <option value="Guitarra">Guitarra</option>
            </select><br>

            <label>Curso: </label>
            <select asp-for="Curso">
                <option value="Matematica">Matematica</option>
                <option value="Lenguaje">Lenguaje</option>
                <option value="Fisica">Fisica</option>
            </select><br> 

            <input type="submit" value="Registrar"/>
        </form>
    </div>
    
</body>
</html>